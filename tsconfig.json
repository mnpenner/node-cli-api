{
    "compilerOptions": {
        "strict": true,
        "importHelpers": false,
        "inlineSources": true,
        "noEmitOnError": true,
        "pretty": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "removeComments": false,
        "preserveConstEnums": false,
        "sourceMap": true,
        "lib": ["esnext"],
        "skipLibCheck": false,
        "outDir": "dist/types",
        "emitDeclarationOnly": true,
        "target": "esnext",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ]
}
